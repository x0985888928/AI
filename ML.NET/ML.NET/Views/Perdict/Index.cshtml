@model ML.NET.Models.PricePredictionInput
@{
    ViewData["Title"] = "Price Prediction";
}

<h1>Price Prediction</h1>

<form asp-action="Predict" method="post">
    <div>
        <label>Company Name</label>
        <input asp-for="CompanyName" />
    </div>
    <div>
        <label>Brand</label>
        <input asp-for="Brand" />
    </div>
    <div>
        <label>Type</label>
        <input asp-for="Type" />
    </div>
    <div>
        <label>ROM</label>
        <input asp-for="ROM" type="number" />
    </div>
    <div>
        <label>MobileWeight</label>
        <input asp-for="MobileWeight" type="number" />
    </div>
    <div>
        <label>RAM</label>
        <input asp-for="RAM" type="number" />
    </div>
    <div>
        <label>BatteryCapacity</label>
        <input asp-for="BatteryCapacity" type="number" />
    </div>
    <div>
        <label>LaunchedYear</label>
        <input asp-for="LaunchedYear" type="number" />
    </div>

    <button type="submit">Predict</button>
</form>

@if (ViewBag.PredictedPrice != null)
{
    <h2>Predicted Price: @ViewBag.PredictedPrice</h2>
}
