@* Views/Home/Index.cshtml *@
@{
    ViewData["Title"] = "主頁";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <!-- 照片 + 姓名 + GitHub -->
    <div class="col-md-12 mb-4">
        <div class="card h-100">
            <div class="card-header" data-i18n="photo"></div>
            <div class="card-body text-center">
                <img src="~/img/avatar.jpg" width="200" height="200" class="img-fluid mx-auto" />
                <div class="mt-3 display-6" data-i18n="name"></div>
                <h6 class="text-info">
                    <a href="https://github.com/x0985888928"
                       target="_blank"
                       class="text-info text-decoration-none"
                       data-i18n="github"></a>
                </h6>
            </div>
        </div>
    </div>

    <!-- 學經歷與工作經歷 -->
    <div class="col-md-12 mb-4">
        <div class="card">
            <div class="card-header" data-i18n="eduWork"></div>
            <div class="card-body">
                <h6 class="text-info" data-i18n="education"></h6>
                <p data-i18n="eduInstitute"></p>

                <h6 class="text-info" data-i18n="projectWork"></h6>
                <ul class="mb-3">
                    <li data-i18n="thesis"></li>
                    <li data-i18n="vbAssistant"></li>
                    <li data-i18n="hackathon"></li>
                </ul>

                <h6 class="text-info" data-i18n="jobHistoryTitle"></h6>
                <ul class="mb-3">
                    <li data-i18n="jobTaishin"></li>
                    <li data-i18n="jobCMU"></li>
                </ul>
            </div>
        </div>
    </div>

    <!-- 自傳 -->
    <div class="col-md-12 mb-4">
        <div class="card">
            <div class="card-header" data-i18n="selfIntroTitle"></div>
            <div class="card-body">
                <h6 class="text-info" data-i18n="responsibilityTitle"></h6>
                <p data-i18n="responsibilityText"></p>

                <h6 class="text-info" data-i18n="workAreaTitle"></h6>
                <ul class="mb-3">
                    <li data-i18n="workArea1"></li>
                    <li data-i18n="workArea2"></li>
                    <li data-i18n="workArea3"></li>
                </ul>

                <h6 class="text-info" data-i18n="sideProjectsTitle"></h6>
                <ul class="mb-3">
                    <li data-i18n="sideProject1"></li>
                    <li data-i18n="sideProject2"></li>
                    <li data-i18n="sideProject3"></li>
                </ul>

                <h6 class="text-info" data-i18n="philosophyTitle"></h6>
                <p data-i18n="philosophyText"></p>
            </div>
        </div>
    </div>

</div>