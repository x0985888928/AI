@model IEnumerable<ML.NET.Models.Customer>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.UserID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductNum)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.UserID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProductName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProductNum)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.FormNo">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.FormNo">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.FormNo">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
