@* _Layout.cshtml — 加入淺色邊框並調亮 Sidebar 背景 *@
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ML.NET</title>

    <!-- Bootstrap 5 CSS (CDN) -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" crossorigin="anonymous" />
    <!-- SB Admin 2 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/startbootstrap-sb-admin-2@7.0.2/css/sb-admin-2.min.css" rel="stylesheet" />
    <!-- 自訂樣式 -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ML.NET.styles.css" asp-append-version="true" />

    <!-- Font Awesome (Sidebar toggle icon) -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/js/all.min.js" crossorigin="anonymous"></script>

    @RenderSection("Styles", required: false)

    <style>
        /* 1. 調亮 Sidebar 漸層背景 */
        #accordionSidebar {
            background: linear-gradient(180deg, #2a2a3d 0%, #303047 100%) !important;
            border-right: 1px solid rgba(255, 255, 255, 0.15);
        }
        /* 2. 收合時同樣保留邊框 */
        #accordionSidebar.toggled {
            width: 0px;
            border-right: 1px solid rgba(255, 255, 255, 0.15);
        }
        /*3. 隱藏*/
        #accordionSidebar.toggled span {
            display: none;
        } 
    </style>
</head>
<body id="page-top" class="dark-mode">
    <div id="wrapper" class="d-flex">
        <!-- Sidebar 外層容器 -->
        <div class="sidebar-container">
            <ul class="navbar-nav sidebar sidebar-dark accordion" id="accordionSidebar">
                <!-- Sidebar Brand -->
                <a class="sidebar-brand d-flex align-items-center justify-content-center" asp-area="" asp-controller="Home" asp-action="Index">
                    <div class="sidebar-brand-icon"><i class="fas fa-chart-line"></i></div>
                    <div class="sidebar-brand-text mx-3">ML Dashboard</div>
                </a>
                <hr class="sidebar-divider my-0" />
                <!-- Nav Items -->
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Predict" asp-action="Index">
                        <i class="fas fa-magic"></i>
                        <span>即時預測</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="History" asp-action="Index">
                        <i class="fas fa-chart-bar"></i>
                        <span>歷史趨勢</span>
                    </a>
                </li>
            </ul>
        </div>

        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column w-100">
            <!-- Topbar -->
            <nav class="navbar navbar-expand navbar-light bg-white topbar mb-4 static-top shadow">
                <!-- Sidebar Toggle -->
                <button id="sidebarToggle" class="btn btn-link d-none d-md-inline rounded-circle me-3">
                    <i class="fa fa-bars"></i>
                </button>
                <!-- 左側 Nav -->
                <ul class="navbar-nav me-auto">
                    <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Index">Home</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Privacy">Privacy</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Products" asp-action="Index">Products</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Customer" asp-action="Index">Customers</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Predict" asp-action="Index">Predict</a></li>
                </ul>
                <!-- 右側 登入/登出 按鈕 -->
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item"><a class="btn btn-sm btn-primary me-2" asp-controller="Account" asp-action="Login">登入</a></li>
                    <li class="nav-item"><a class="btn btn-sm btn-secondary" asp-controller="Account" asp-action="Logout">登出</a></li>
                </ul>
            </nav>

            <!-- Page Content -->
            <div class="container-fluid">
                @RenderBody()
            </div>

            <!-- Footer -->
            <footer class="sticky-footer bg-white mt-auto">
                <div class="container my-auto">
                    <div class="copyright text-center my-auto"><span>© 2025 ML.NET</span></div>
                </div>
            </footer>
        </div>
    </div>

    <!-- Core Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/startbootstrap-sb-admin-2@7.0.2/js/sb-admin-2.min.js"></script>
    <!-- 手動綁定 Sidebar Toggle 行為 -->
    <script>
        document.getElementById("sidebarToggle").addEventListener("click", function () {
            document.getElementById("accordionSidebar").classList.toggle("toggled");
        });
    </script>
    <!-- Chart.js -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
